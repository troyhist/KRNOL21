REM -------------------------------------------------------------------------
FF = FREEFILE
REM -------------------------------------------------------------------------
OPEN "O", #FF, "KRNOL.LST"
REM -------------------------------------------------------------------------
PRINT #FF, ";KRNOL.LST listing file ver. 1.0"
PRINT #FF, ";Intro graphics & palettes"
REM -------------------------------------------------------------------------
FOR I = 0 TO 4
REM -------------------------------------------------------------------------
NUM$ = LTRIM$(STR$(I))
INTRONAMEg$ = "GRAPHS\INTRO0" + NUM$ + ".VGA"
INTRONAMEp$ = "GRAPHS\INTRO0" + NUM$ + ".PAL"
PRINT #FF, INTRONAMEg$
PRINT #FF, INTRONAMEp$
REM -------------------------------------------------------------------------
NEXT I
REM -------------------------------------------------------------------------
PRINT #FF, ";Logo graphics & palettes"
REM -------------------------------------------------------------------------
FOR I = 0 TO 8
REM -------------------------------------------------------------------------
NUM$ = LTRIM$(STR$(I))
LOGONAMEg$ = "GRAPHS\LOGO0" + NUM$ + ".VGA"
LOGONAMEp$ = "GRAPHS\LOGO0" + NUM$ + ".PAL"
PRINT #FF, LOGONAMEg$
PRINT #FF, LOGONAMEp$
REM -------------------------------------------------------------------------
NEXT I
REM -------------------------------------------------------------------------
PRINT #FF, ";Intro wavs"
REM -------------------------------------------------------------------------
FOR I = 0 TO 4
REM -------------------------------------------------------------------------
NUM$ = LTRIM$(STR$(I))
INTRONAMEw$ = "SOUND\INTRO0" + NUM$ + ".WAV"
PRINT #FF, INTRONAMEw$
REM -------------------------------------------------------------------------
NEXT I
REM -------------------------------------------------------------------------
PRINT #FF, ";Logo wavs"
REM -------------------------------------------------------------------------
FOR I = 0 TO 8
REM -------------------------------------------------------------------------
NUM$ = LTRIM$(STR$(I))
LOGONAMEw$ = "SOUND\LOGO0" + NUM$ + ".WAV"
PRINT #FF, LOGONAMEw$
REM -------------------------------------------------------------------------
NEXT I
